# IDM Latent Space Platform - Environment Configuration

# Environment
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-idm-latent-space-2024

# Database (using SQLite for easy development)
DATABASE_URL=sqlite+aiosqlite:///./idm_latent_space.db

# Redis
REDIS_URL=redis://localhost:6379

# Application
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# File Upload Settings
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads

# Model Storage
MODEL_STORAGE_DIR=models
DATASET_STORAGE_DIR=datasets
CACHE_DIR=cache

# Processing
MAX_WORKERS=4
BATCH_SIZE=1000
MEMORY_LIMIT=8GB

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]